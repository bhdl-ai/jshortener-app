{
	"name": "jshortener-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"build:prod": "npm run db:push && opennextjs-cloudflare build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"deploy:prod": "opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:push": "wrangler d1 migrations apply jshortener-db --remote",
		"db:migrate": "npm run db:generate && npm run db:push"
	},
	"dependencies": {
		"@base-ui/react": "^1.0.0",
		"@hookform/resolvers": "^5.2.2",
		"@opennextjs/cloudflare": "^1.14.4",
		"@tanstack/react-query": "^5.90.15",
		"@tanstack/react-table": "^8.21.3",
		"@trpc/client": "^11.8.1",
		"@trpc/react-query": "^11.8.1",
		"@trpc/server": "^11.8.1",
		"better-auth": "^1.4.9",
		"class-variance-authority": "^0.7.1",
		"client-only": "^0.0.1",
		"clsx": "^2.1.1",
		"culori": "^4.0.2",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.45.1",
		"lucide-react": "^0.562.0",
		"next": "15.5.9",
		"next-themes": "^0.4.6",
		"nuqs": "^2.8.6",
		"qrcode": "^1.5.4",
		"radix-ui": "^1.4.3",
		"react": "19.1.4",
		"react-day-picker": "^9.13.0",
		"react-dom": "19.1.4",
		"react-error-boundary": "^6.0.1",
		"react-hook-form": "^7.69.0",
		"server-only": "^0.0.1",
		"shadcn": "^3.6.2",
		"sonner": "^2.0.7",
		"superjson": "^2.2.6",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/culori": "^4.0.1",
		"@types/node": "^20.19.27",
		"@types/qrcode": "^1.5.6",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"wrangler": "^4.54.0"
	}
}